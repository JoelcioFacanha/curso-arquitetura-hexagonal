{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "rootDir": "src", // Diretório de códigos Typescript
        "outDir": "dist", // Diretório de saída para os arquivos compilados
        "sourceMap": true, // Gera mapas de origem para facilitar o debug
        "noImplicitAny": true, // Não permite declaração de variaveis ou parametros sem tipo
        "noImplicitReturns": true, // Verifica se todas as funções possuem tipo de retorno informado
        "noEmitOnError": true, // Não gera o código JS caso haja algum erro durante o processo de compilação
        "strictNullChecks": true, // Força a verificação de valores null ou undefined
        "noUnusedLocals": true, // Sinaliza quando existem variaveis declaradas e não utilizadas
        "baseUrl": "./src", // define o diretório base a partir do qual o Typescript começa a resolver os imports não relativos
        "paths": {
            "@shared/*": ["core/shared/*"],
            "@usuario/*": ["core/usuario/*"],
            "@produto/*": ["core/produto/*"],
            "@external/*": ["external/*"]
        }
    },
    "compileOnSave": true,
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts"]
}
